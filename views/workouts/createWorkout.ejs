<%- include('../layouts/mainLayout', { title: 'Create Workout' }) %>

<main>
    <h1>Create Workout</h1>
    <form action="/api/workouts/create" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required>
        <label for="description">Description:</label>
        <textarea id="description" name="description"></textarea>
        <label for="sportType">Sport Type:</label>
        <input type="text" id="sportType" name="sportType" required>
        <label for="difficultyLevel">Difficulty Level:</label>
        <select id="difficultyLevel" name="difficultyLevel" required>
            <option value="beginner">Beginner</option>
            <option value="intermediate">Intermediate</option>
            <option value="advanced">Advanced</option>
        </select>
        <label for="duration">Duration (minutes):</label>
        <input type="number" id="duration" name="duration" required>
        <label for="exercises">Exercises (comma separated):</label>
        <input type="text" id="exercises" name="exercises" required>
        <label for="trainerNotes">Trainer Notes:</label>
        <textarea id="trainerNotes" name="trainerNotes"></textarea>
        
        <label for="isCancelled">Is Cancelled:</label>
        <input type="checkbox" id="isCancelled" name="isCancelled" value="true">

        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="0" max="5">
        
        <label for="createdBy">Created By:</label>
        <input type="text" id="createdBy" name="createdBy" required>
        <button type="submit">Create Workout</button>
    </form>
</main>
